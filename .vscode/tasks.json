{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/arch:AVX512",
                "/diagnostics:caret",
                "/DDEBUG",
                "/D_DEBUG", // Okay for C, but do not define this for C++
                "/F0x10485100",
                "/favor:INTEL64",
                "/fp:strict",
                "/fpcvt:IA",
                "/Gw",
                "/MP",
                "/Qpar",
                "/Zc:preprocessor",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/TC",
                "/Wall",
                "/Od",
                "/std:c17",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}-vscodedbg.exe",
                "${file}",
                "/link /DEBUG:full"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}